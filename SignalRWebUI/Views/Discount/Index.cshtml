@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
@model List<SignalRWebUI.Dtos.DiscountDtos.ResultDiscountDto>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İndirim işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İndirimler</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ürün</th>
									<th scope="col">İndirim Oranı</th>
									<th scope="col">Durum</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Sil</th>
									<th scope="col">Aktif yap</th>
									<th scope="col">Pasif yap</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{


									<tr>
										<td>@item.DiscountId</td>
										<td>@item.Title</td>
										<td>@item.Amount</td>
										<td>@item.Status</td>

										<td><a href="/Discount/UpdateDiscount/@item.DiscountId" class="btn btn-outline-success">Güncelle</a></td>
										<td><a href="/Discount/DeleteDiscount/@item.DiscountId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Discount/ChangeStatusToTrue/@item.DiscountId" class="btn btn-outline-warning">Aktif yap</a></td>
										<td><a href="/Discount/ChangeStatusToFalse/@item.DiscountId" class="btn btn-outline-dark">Pasif yap</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Discount/CreateDiscount" class="btn btn-outline-primary">Yeni indirim</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>
