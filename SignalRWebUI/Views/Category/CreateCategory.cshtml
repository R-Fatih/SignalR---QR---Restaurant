@{
	ViewData["Title"] = "CreateCategory";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
@model SignalRWebUI.Dtos.CategoryDtos.CreateCategoryDto
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni kategori ekleme</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">Kategori adı</label>
								<input type="text" class="form-control" asp-for="CategoryName" id="categoryname" placeholder="Adı">
							</div>


							<div class="card-action">
								<button class="btn btn-primary">Kaydet</button>

							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
