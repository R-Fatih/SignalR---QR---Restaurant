@{
	ViewData["Title"] = "UpdateContact";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
@model SignalRWebUI.Dtos.ContactDtos.UpdateContactDto
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">İletişim güncelleme</div>
						</div>
						<input type="hidden" asp-for="ContactId"/>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">Lokasyon</label>
								<input type="text" class="form-control" asp-for="Location" id="categoryname" placeholder="Adı">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Phone">Telefon</label>
								<input type="text" class="form-control" asp-for="Phone" id="Phone" placeholder="Adı">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Phone">Alt başlık</label>
								<input type="text" class="form-control" asp-for="FooterTitle" id="Phone" placeholder="Adı">
							</div>
						</div><div class="card-body">
							<div class="form-group">
								<label for="Phone">Açık günler</label>
								<input type="text" class="form-control" asp-for="OpenDays" id="Phone" placeholder="Adı">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Phone">Açık günler açıklaması</label>
								<input type="text" class="form-control" asp-for="OpenDaysDescription" id="Phone" placeholder="Adı">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Phone">Açık saatler</label>
								<input type="text" class="form-control" asp-for="OpenHours" id="Phone" placeholder="Adı">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Mail">Mail</label>
								<input type="email" class="form-control" asp-for="Mail" id="Mail" placeholder="Adı">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="desc">Açıklama</label>
								<input type="text" class="form-control" asp-for="FooterDescription" id="desc" placeholder="Adı">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Kaydet</button>

						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
