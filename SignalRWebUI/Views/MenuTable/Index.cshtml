@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
@model List<SignalRWebUI.Dtos.MenuTableDtos.ResultMenuTableDto>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Masa işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Masalar</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Adı</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Sil</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{


									<tr>
										<td>@item.MenuTableId</td>
										<td>@item.Name</td>
										<td><a href="/MenuTable/UpdateMenuTable/@item.MenuTableId" class="btn btn-outline-success">Güncelle</a></td>
										<td><a href="/MenuTable/DeleteMenuTable/@item.MenuTableId" class="btn btn-outline-danger">Sil</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/MenuTable/CreateMenuTable" class="btn btn-outline-primary">Yeni masa</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>
