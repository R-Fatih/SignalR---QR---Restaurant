
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@model List<SignalRWebUI.Dtos.CategoryDtos.ResultCategoryDto>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kategoriler</div>
					</div>
					<div class="card-body">
						<div class="card-sub">

						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Adı</th>
									<th scope="col">Durum</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Sil</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									
								
								<tr>
									<td>@item.CategoryId</td>
									<td>@item.CategoryName</td>
									<td>@item.CategoryStatus</td>
										<td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-success">Güncelle</a></td>
										<td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger">Sil</a></td>
								</tr>
								}
							</tbody>
						</table>
						<a href="/Category/CreateCategory" class="btn btn-outline-primary">Yeni kategori</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>
