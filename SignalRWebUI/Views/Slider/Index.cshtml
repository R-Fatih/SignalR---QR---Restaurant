@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
@model List<SignalRWebUI.Dtos.SliderDtos.ResultSliderDto>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne çıkan alan işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Öne çıkan alanlar</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık1</th>
									<th scope="col">Başlık2</th>
									<th scope="col">Başlık3</th>
									<th scope="col">Açıklama1</th>
									<th scope="col">Açıklama2</th>
									<th scope="col">Açıklama3</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Sil</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{


									<tr>
										<td>@item.SliderId</td>
										<td>@item.Title1</td>
										<td>@item.Title2</td>
										<td>@item.Title3</td>
										<td>@item.Description1</td>
										<td>@item.Description2</td>
										<td>@item.Description3</td>
										<td><a href="/Slider/UpdateSlider/@item.SliderId" class="btn btn-outline-success">Güncelle</a></td>
										<td><a href="/Slider/DeleteSlider/@item.SliderId" class="btn btn-outline-danger">Sil</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Slider/CreateSlider" class="btn btn-outline-primary">Yeni öne çıkan</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>
