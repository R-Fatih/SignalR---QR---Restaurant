@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
@model List<SignalRWebUI.Dtos.SocialMediaDtos.ResultSocialMediaDto>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal medya işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sosyal medya hesapları</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Url</th>
									<th scope="col">İkon</th>								
									<th scope="col">Güncelle</th>
									<th scope="col">Sil</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{


									<tr>
										<td>@item.SocialMediaId</td>
										<td>@item.Title</td>
										<td>@item.Url</td>
										<td>@item.Icon</td>
										
										<td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-success">Güncelle</a></td>
										<td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger">Sil</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/SocialMedia/CreateSocialMedia" class="btn btn-outline-primary">Yeni öne çıkan</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>
