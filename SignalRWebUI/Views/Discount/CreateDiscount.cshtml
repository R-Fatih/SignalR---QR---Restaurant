@{
	ViewData["Title"] = "CreateDiscount";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
@model SignalRWebUI.Dtos.DiscountDtos.CreateDiscountDto
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İndirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni İndirim ekleme</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">Ürün adı</label>
